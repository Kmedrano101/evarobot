<?xml version="1.0"?>
<!--
  EvaRobot ROS2 Control Configuration

  Defines the hardware interface for ROS2 Control.
  Configured for Gazebo Harmonic simulation using gz_ros2_control plugin.
  For real hardware, replace the hardware plugin with your custom hardware interface.

  Author: Kevin Medrano Ayala
  License: BSD-3-Clause
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===================================================================== -->
  <!-- ROS2 CONTROL -->
  <!-- ===================================================================== -->

  <ros2_control name="evarobot_system" type="system">

    <!-- Hardware plugin for Gazebo Harmonic simulation -->
    <!-- For real hardware, replace with your custom hardware interface -->
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <!-- Left wheel joint -->
    <joint name="left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Right wheel joint -->
    <joint name="right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

  </ros2_control>

  <!-- ===================================================================== -->
  <!-- GAZEBO HARMONIC ROS2 CONTROL PLUGIN -->
  <!-- ===================================================================== -->

  <gazebo>
    <!-- Gazebo Harmonic ROS2 Control Plugin -->
    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <!-- ROS2 Control configuration file -->
      <parameters>$(find evarobot_controller)/config/evarobot_controllers.yaml</parameters>
      <!-- ROS namespace -->
      <ros>
        <namespace>/</namespace>
      </ros>
    </plugin>
  </gazebo>

</robot>
