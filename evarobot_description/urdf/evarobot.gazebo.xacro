<?xml version="1.0"?>
<!--
  EvaRobot Gazebo Harmonic Configuration

  Gazebo Harmonic-specific elements including:
  - Material colors
  - Physical properties (friction, damping)
  - Sensor plugins (IMU, LiDAR)

  Note: This file is configured for Gazebo Harmonic (gz-sim) used with ROS2 Jazzy.
        For Gazebo Classic, use different plugin names.

  Author: Kevin Medrano Ayala
  License: BSD-3-Clause
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===================================================================== -->
  <!-- GAZEBO COLORS AND PHYSICS -->
  <!-- ===================================================================== -->

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
  </gazebo>

  <gazebo reference="left_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="right_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="caster_wheel_link">
    <material>Gazebo/Grey</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <!-- ===================================================================== -->
  <!-- GAZEBO HARMONIC SENSORS (OPTIONAL) -->
  <!-- ===================================================================== -->

  <!--
    IMU Sensor for Gazebo Harmonic
    Uncomment to enable IMU sensor on the robot.
    Note: Requires 'imu_link' to be defined in the URDF.
