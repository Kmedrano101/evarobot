      <topic>imu</topic>
      <gz_frame_id>base_link</gz_frame_id>
      <enable_metrics>false</enable_metrics>
    </sensor>
  </gazebo>
  -->

  <!--
    LiDAR Sensor for Gazebo Harmonic
    Uncomment to enable LiDAR sensor on the robot.
    Note: Requires 'lidar_link' to be defined in the URDF.
  -->
  <!--
